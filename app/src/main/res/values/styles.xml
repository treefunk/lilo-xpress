<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="paperStyle">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginBottom">45dp</item>
    </style>

    <style name="LiloTextBody1">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LiloTextLightHeader1">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGreyLight</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="lilo_til1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="lilo_til2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconTint">@android:color/white</item>

    </style>

    <style name="lilo_et_box">
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


</resources>